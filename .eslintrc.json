{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": "eslint:recommended",
	"parser": "@babel/eslint-parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"rules": {
		"semi": [
			"error",
			"never",
			{
				"beforeStatementContinuationChars": "always"
			}
		],
		"quotes": [
			"error",
			"double"
		]
	}
}
